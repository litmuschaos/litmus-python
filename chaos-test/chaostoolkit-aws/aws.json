{
    "version": "1.0.0",
    "title": "EC2 instances are self-healing",
    "description": "Do instances restart on their own when they are stopped? Unlikely in a default case, which is why we use a rollback to restart it manually. It's expected this experiment will likely always fail",
    "configuration": {
      "aws_region": "us-west-2",
      "ec2_instance_id": {
        "type": "env",
        "key": "EC2_INSTANCE_ID"
    }
    },
  "steady-state-hypothesis": {
      "title": "EC2 instance self-heals",
      "probes": [
        {
          "type": "probe",
          "name": "there-should-be-one-running-instance",
          "secrets": ["aws"],
          "tolerance": {
            "type": "jsonpath",
            "path": "$.Reservations[0].Instances[*][?(@.InstanceId=\"i-0f41ecf8efd506eb6\")].State.Name",
            "expect": "running"
          },
          "provider": {
            "type": "python",
            "module": "chaosaws.ec2.probes",
            "func": "describe_instances",
            "arguments": {
              "filters": [
                {
                  "Name": "availability-zone",
                  "Values": [
                    "us-west-2a"
                  ]
                }
              ]
            }
          }
        }
      ]
    },
    "method": [
      {
        "type": "action",
        "name": "stopping-instance-now",
        "provider": {
          "type": "python",
          "module": "chaosaws.ec2.actions",
          "secrets": ["aws"],
          "func": "stop_instance",
          "arguments": {
            "instance_ids": [
              "i-0f41ecf8efd506eb6"
            ]
          }
        },
        "pauses": {
          "after": 15
        }
      }
    ],
    "rollbacks": [
      {
        "type": "action",
        "name": "starting-instance-again",
        "secrets": ["aws"],
        "provider": {
          "type": "python",
          "module": "chaosaws.ec2.actions",
          "func": "start_instances",
          "arguments": {
            "instance_ids": [
              "i-0f41ecf8efd506eb6"
            ]
          }
        },
        "pauses": {
        "before": 15
        }
      }
    ]
  }