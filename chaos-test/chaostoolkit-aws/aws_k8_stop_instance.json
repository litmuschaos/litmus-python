{
    "version": "1.0.0",
    "title": "EC2 instances Going from K8 cluster",
    "description": "Do instances come up automatically from K8. It's expected this experiment will likely always pass based on time",
    "tags": [
      "platform:aws",
      "service:ec2"
    ],
    "configuration": {
        "aws_region": { 
            "type": "env", 
            "key": "AWS_REGION"
        },
      "ec2_instance_id": {
        "type": "env",
        "key": "EC2_INSTANCE_ID"
      },
      "ec2_az": {
        "type": "env",
        "key": "EC2_AZ"
      }
    },
    "steady-state-hypothesis": {
      "title": "EC2 instance stopped and K8 recreating them",
      "probes": [
        {
            "type": "probe",
            "name": "there-should-be-fixed-running-instance-5-node-3-master",
            "tolerance": 8,
            "provider": {
              "type": "python",
              "module": "chaosaws.ec2.probes",
              "func": "count_instances",
              "arguments": {
                "filters": [
                  {
                    "Name": "availability-zone",
                    "Values": [
                      "${ec2_az}"
                    ]
                  },
                  {
                      "Name": "instance-state-name",
                      "Values": [ "running" ]
                  }
                ]
              }
            }
          }
      ]
    },
    "method": [
      {
        "type": "action",
        "name": "stopping-instance-now",
        "provider": {
          "type": "python",
          "module": "chaosaws.ec2.actions",
          "func": "stop_instance",
          "arguments": {
            "instance_id": "${ec2_instance_id}",
            "filters": [
              {
                "Name": "availability-zone",
                "Values": [
                  "${ec2_az}"
                ]
              }
            ]
          }
        },
        "pauses": {
          "after": 120
        }
      }
    ],
    "rollbacks": [
      {
        "type": "action",
        "name": "terminate-instance",
        "provider": {
          "type": "python",
          "module": "chaosaws.ec2.actions",
          "func": "terminate_instance",
          "arguments": {
            "instance_id": "${ec2_instance_id}"
          }
        },
        "pauses": {
          "before": 15
        }
      }
    ]
  }